<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/baag"
        app:layout_constraintBottom_toBottomOf="@+id/lower"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/body"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baag"
        tools:srcCompat="@drawable/baag"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/lower"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeWidth="1dp"
            android:theme="@style/Theme.MaterialComponents.DayNight"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="#e0e0e0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="PrivateResource">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e0e0e0"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eeeeee"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tambola"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/a8"
                        android:textColor="#780206"
                        tools:ignore="NestedWeights"
                        android:layout_margin="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tambola"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:background="@drawable/btn_light"
                        android:fontFamily="@font/a1"
                        android:text="Play"
                        android:textColor="#FFFFFF"
                        app:elevation="30dp"
                        app:icon="@drawable/dragon"
                        app:iconGravity="start"
                        app:iconSize="25dp"
                        app:rippleColor="#000000"
                        app:strokeColor="#ffffff"
                        app:strokeWidth="1dp" />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#eeeeee"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tic Tac Toe"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/a8"
                        android:textColor="#780206"
                        tools:ignore="NestedWeights" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tictactoe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:background="@drawable/btn_light"
                        android:fontFamily="@font/a1"
                        android:text="Play"
                        android:textColor="#FFFFFF"
                        app:elevation="30dp"
                        app:icon="@drawable/tic"
                        app:iconGravity="start"
                        app:iconSize="25dp"
                        app:rippleColor="#000000"
                        app:strokeColor="#ffffff"
                        app:strokeWidth="1dp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eeeeee"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Path Finder"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:fontFamily="@font/a8"
                        android:textColor="#780206"
                        tools:ignore="NestedWeights"
                        android:layout_margin="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:background="@drawable/btn_light"
                        android:fontFamily="@font/a1"
                        android:text="Play"
                        android:textColor="#FFFFFF"
                        app:elevation="10dp"
                        app:icon="@drawable/path"
                        app:iconGravity="start"
                        app:iconSize="25dp"
                        app:rippleColor="#000000"
                        app:strokeColor="#ffffff"
                        app:strokeWidth="1dp" />



                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeWidth="1dp"
            android:theme="@style/Theme.MaterialComponents.DayNight"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp"
            app:layout_constraintVertical_bias="1"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="#e0e0e0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="PrivateResource">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#e0e0e0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/insta"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/insta" />

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/fb"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/fb" />

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/git"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/github" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lower"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom|end"
        android:background="@drawable/lower"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/body"
        app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
